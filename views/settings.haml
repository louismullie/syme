.row
  .span8.offset2
    %h2 {{t 'settings.title'}}

    #error-container

    %p
      %b {{t 'settings.welcome'}}, {{user.name}}!
      {{t 'settings.explanation'}}

    %ul.nav.nav-tabs
      %li.active
        %a{href: '#tab-informations'}
          {{t 'settings.informations'}}

      %li
        %a{href: '#tab-settings'}
          {{t 'settings.settings'}}

    .tab-content
      #tab-informations.tab-pane.active
        = haml :'settings/profile'

      #tab-settings.tab-pane
        = haml :'settings/settings'