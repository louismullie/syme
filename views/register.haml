#auth.row
  .columns.small-12.large-8.large-centered
    %h1 Asocial
    %h2 The encrypted social network.

    #auth-methods.row
      .columns.small-12.large-6.large-centered
        %form#register-form{method: 'post'}
        
          #error.hidden
            %i.icon-warning-sign
            %span
          
          .input-text-icon
            %i.icon-user
            %input{type: 'text', name: 'full_name', placeholder: 'Full name', autocomplete: 'off', autocorrect: 'off', autocapitalize: 'off', spellcheck: 'false'}

          .input-text-icon
            %i.icon-envelope
            %input{type: 'text', name: 'email', placeholder: 'Email address', autocomplete: 'off', autocorrect: 'off', autocapitalize: 'off', spellcheck: 'false'}

          .input-text-icon
            %i.icon-lock
            %input{type: 'password', name: 'password', placeholder: '{{t "login.password"}}'}

          %a.btn.btn-success{ href: '#', role: 'submit' }
            Register <i class="icon-spinner icon-spin"></i>

          %p.switchmode
            Already registered? <a href="/login" data-hbs>Log in</a>.