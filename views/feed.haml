.row
  // Left column
  .columns.small-12.large-5.large-offset-2

    // Feed form
    .row
      .small-12.collapse
        = haml :'feed/form'

    // Feed
    #feed{ 'data-year' => '{{ year }}',
           'data-month' => '{{ month }}' }

      // New content button
      #newcontent
        %a.btn{href: '#'} {{t 'new_content'}} (<span></span>)

      // Feed errors
      {{> error-alert}}

      // Posts loop
      {{> feed-posts}}

    // Load more button, triggered by infinite scroller
    // every few pages
    #load-more
      %a.btn{href: '#'} {{t 'feed.load_more'}}

  // Group panel
  #feed-panel.columns.small-12.large-3.end

    // Group name
    %h1
      {{group.name}}

    // Group avatar
    %a{:'data-tip' => 'Change your group picture'}
      {{#with group.avatar}}

      // Begin: Move that out of here
      {{#if placeholder}}

      %img.group-avatar

      {{else}}

      %img.group-avatar.encrypted-image{src: empty_image, alt: 'Encrypted image', 'data-attachment-id' => '{{id}}', 'data-attachment-key' => '{{key}}', 'data-attachment-type' => 'image', 'data-attachment-group' => '{{group_name}}'}

      {{/if}}
      // End: Move that out of here

      {{/with}}

    // Group avatar hidden file upload
    %form
      %input#group-avatar-file-input.hidden{type: 'file', name: 'avatar'}

    // Userlist
    {{> feed-users}}