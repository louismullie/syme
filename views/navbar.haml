#navbar
  .row
    .small-12
      %ul
        %li
          %a#brand{ href: '/', :'data-hbs' => '' }
            = settings.app_title

        %li
          %a#notifications.btn{ href: '#', 'data-popover' => 'notifications-container' }
            %i.icon-bell-alt

            -# {{#if notifications.count}}
            %span.notification-badge 8
            -# {{/if}}

          #notifications-container.popover
            %h3 Notifications

            #notifications-content
              {{notifications.view}}

        .pull-right
          %li
            %a.btn{ href: '/settings', :'data-hbs' => '' }
              %i.icon-cog

          %li
            %a.btn{ href: '/logout' }
              %i.icon-signout