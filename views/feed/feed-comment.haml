.comment-box{ id: '{{id}}', class: '{{hidden}}', :'data-timestamp' => '{{created_at}}' }
  -# Avatar
  {{#with commenter}} {{> feed-avatar.hbs}} {{/with}}

  -# Delete button
  {{#if deletable}}
  %a.comment-delete.btn.btn-white.hint--left{ href: '#', :'data-hint' => 'Delete' }
    %i.icon-remove
  {{/if}}

  -# Commenter name (will dynamically be put in .collapsable's first <p>)
  %a.commenter-name{href: '#'} {{commenter.name}}

  -# Will transform into collapsable
  %div{ class: 'encrypted {{hidden}}', :'data-encrypted' => '{{#if encrypted}}true{{/if}}' }
    {{content}}

  -# Footer
  .comment-footer
    {{debug}}
    %a.time{ href: '/users/{{current_user_id}}/groups/{{current_group_id}}/posts/{{post_id}}', hbs: '' }
      %time.timeago{ datetime: '{{created_at}}' }
        
    %span &middot;

    // Like action
    %a{ href: '#', class: 'like-action {{#if likeable.liked_by_user}}active{{/if}}' }<
      %span.default-text> Like
      %span.active-text Unlike

    // Like count
    %span{ partial: 'feed-like-count' }
      {{> feed-like-count.hbs}}