.modal-title
  Invite by Email

  %a.hint--left{ href: '#', role: 'close-modal', :'data-hint' => 'Close' }
    %i.icon-remove-sign

.modal-content

  %form{ action: 'post' }
  
    #batchinvite

      #tags
        %input{ type: 'text', placeholder: 'Add an email', maxlength: 50 }

    %p.explanation
      Invite more than one person by entering one email per line.

    %a.modal-button{ href: '#' }
      %span.invite
        Invite

      %span.spinner
        %i.icon-spinner.icon-spin