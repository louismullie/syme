{{#if PPA_k}}
// Invite link
%a.group-card-title.integrate-link{  href: '/{{name}}', :'data-hbs' => '',
                    :'data-invite-id' => '{{invite_id}}',
                    :'data-invite-PPA_k' => '{{PPA_k}}',
                    :'data-invite-k_sA' => '{{k_sA}}',
                    :'data-group-name' => '{{name}}'}
  {{name}}

{{else}}

{{#if new_keys}}

// Confirmation link
%a.group-card-title.update-link{ href: '/{{name}}', :'data-hbs' => '',
                :'data-invite-new_keys' => '{{new_keys}}',
                :'data-group-name' => '{{name}}'}
  {{name}}

{{else}}

// Normal link
%a.group-card-title{href: '/{{name}}', :'data-hbs' => ''}
  {{name}}

{{/if}}

{{/if}}

