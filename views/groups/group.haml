  %a.group-avatar-link{href: '#'}
    // Delete button
    {{#if deletable}}
    %a.delete-group{href: '#', :'data-group-id' => '{{id}}'} X
    {{/if}}

    // Group avatar
    {{#with avatar}} {{> groups-avatar}} {{/with}}