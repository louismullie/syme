%div{ style: 'font-family: Helvetica, Arial, Geneva, sans-serif; font-size:1.2em; font-weight: 200; background:#fafafa; line-height:1.3em; padding: 30px' }
  %div{ style: 'width: 620px; margin: 0 auto; font-size: .9em;'}
    // Header
    %a{ href: '#', style: 'border-radius: 5px 5px 0 0; text-align: center; display: block; background-color: #5FC0CE; padding: 20px 26px; color: white; text-decoration: none;' }
      %img{ src: 'http://www.getsyme.com/email_header.png' }

    // Message
    %div{ style: 'padding: 30px; color: #000; background-color: #FFF; border-left: 1px solid #CCC; border-right: 1px solid #CCC; '}

      = yield

      %p{ style: 'margin: 0 0 1em 0;' }
        Sincerely,

      %p{ style: 'margin: 0;' }
        The Syme Team

